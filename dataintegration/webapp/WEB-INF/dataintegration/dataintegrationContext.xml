<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
    <bean id="dataIntegrationPipelineRegistry" class="org.labkey.api.pipeline.TaskPipelineRegistrar">
        <property name="factoryImpls">
            <list>
                <bean class="org.labkey.di.pipeline.TransformTask$Factory"/>
            </list>
        </property>
        <property name="pipelines">
            <list>
                <!-- DataIntegration pipeline -->
                <bean class="org.labkey.api.pipeline.TaskPipelineSettings">
                    <constructor-arg type="java.lang.Class" value="org.labkey.di.pipeline.TransformJob"/>
                    <property name="taskProgressionSpec">
                        <list>
                            <bean id="QueryTransformTask" class="org.labkey.api.pipeline.TaskId">
                                <constructor-arg><value type="java.lang.Class">org.labkey.di.pipeline.TransformTask</value></constructor-arg>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>
