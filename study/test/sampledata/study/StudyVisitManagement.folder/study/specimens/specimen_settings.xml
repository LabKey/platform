<?xml version="1.0" encoding="UTF-8"?>
<specimens repositoryType="ADVANCED" enableRequests="true" editableRepository="true" xmlns="http://labkey.org/study/xml">
  <webPartGroupings>
    <grouping>
      <groupBy>Primary Type</groupBy>
      <groupBy>Derivative Type</groupBy>
